<div class="col-sm-8 col-sm-offset-2">
  <h1>New Article Form</h1>
  <hr>
  <%= form_for(@article) do |f| %>
    <div class="form-group">
      <%= f.label "Article Title" %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label "Article Content" %>
      <%= f.text_field :content %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
